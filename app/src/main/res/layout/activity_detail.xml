            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Release Date: 08-03-2021"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SKU: GX6144"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Designer: Kanye West"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nickname: Dark Glow"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
